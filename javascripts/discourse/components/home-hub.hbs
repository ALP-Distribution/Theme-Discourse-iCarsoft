{{! Render nothing if not active }}
{{#if this.active}}
  <div class="home-hub">
    {{! Quick nav grid }}
    <div class="home-hub__quick-nav" role="navigation" aria-label="Quick navigation">
      {{#each this.quickNavItems as |item|}}
        <button type="button"
                class="home-hub__tile"
                style={{concat (if item.bg (concat "--hh-bg:" item.bg ";")) (if item.color (concat "--hh-fg:" item.color ";"))}}
                {{on "click" (fn this.handleTileClick item.url)}}
                aria-label={{item.label}}>
          {{d-icon item.icon}}
          <span class="home-hub__tile-label">{{item.label}}</span>
        </button>
      {{/each}}
    </div>

    {{! Popular topics }}
    <section class="home-hub__section">
      <h2 class="home-hub__heading">{{i18n "home_hub.popular_heading"}}</h2>
      {{#if this.loadingPopular}}
        <div class="home-hub__skeleton"></div>
      {{else}}
        <ul class="home-hub__topics">
          {{#each this.popularTopics as |t|}}
            <li class="home-hub__topic-row">
              {{topic-status topic=t}}
              {{topic-link topic=t}}
              <span class="home-hub__meta">{{category-link t.category}}
                {{#if t.tags}}
                  {{#each t.tags as |tag|}}
                    {{discourse-tag tag}}
                  {{/each}}
                {{/if}}
                <span class="home-hub__counts">❤ {{t.like_count}} · 💬 {{t.posts_count}} · 👁 {{t.views}}</span>
              </span>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </section>

    {{! Latest topics }}
    <section class="home-hub__section">
      <h2 class="home-hub__heading">{{i18n "home_hub.latest_heading"}}</h2>
      {{#if this.loadingLatest}}
        <div class="home-hub__skeleton"></div>
      {{else}}
        <ul class="home-hub__topics">
          {{#each this.latestTopics as |t|}}
            <li class="home-hub__topic-row">
              {{topic-status topic=t}}
              {{topic-link topic=t}}
              <span class="home-hub__meta">{{category-link t.category}}
                {{#if t.tags}}
                  {{#each t.tags as |tag|}}
                    {{discourse-tag tag}}
                  {{/each}}
                {{/if}}
                <span class="home-hub__counts">❤ {{t.like_count}} · 💬 {{t.posts_count}} · 👁 {{t.views}}</span>
              </span>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </section>
  </div>
{{/if}}
